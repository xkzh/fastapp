{
  "package": "com.xk.fastapp",
  "name": "fastapp",
  "versionName": "1.0.0",
  "versionCode": 1,
  "icon": "/Common/logo.png",
  "minPlatformVersion": 1000,
  "features": [
    {
            "name": "system.prompt"
        },
        {
            "name": "system.router"
        },
        {
            "name": "system.shortcut"
        },
        {
            "name": "system.fetch"
        },
        {
            "name": "system.webview"
        },
        {
            "name": "system.storage"
        },
        {
            "name": "system.clipboard"
        },
        {
            "name": "system.share"
        }

  ],
  "permissions": [
    { "origin": "*" }
  ],
  "config": {
    "logLevel": "log"
  },
  "router": {
    "entry": "Main",
    "pages": {
      "Main": {
        "component": "main"
      },
      "ArticleDetail": {
        "component": "articledetail"
      },
      "ArticleCollectList": {
        "component": "articlecollectlist"
      },
      "WebCollectList": {
        "component": "webcollectlist"
      },
      "AddCollectArticle": {
        "component": "addcollectarticle"
      },
      "AddCollectWeb": {
        "component": "addcollectweb"
      }
    }
  },
  "display": {
    "backgroundColor": "#fbf9fe",
    "titleBar": true,
    "titleBarBackgroundColor": "#0faeff",
    "titleBarTextColor": "#ffffff",
    "menu":false,
    "pages": {
      "ArticleCollectList": {
                "titleBar": false
            },
            "AddCollectArticle": {
                "titleBarText": "收藏站外文章"
            },
            "WebCollectList": {
                "titleBar": false
            },
            "AddCollectWeb": {
                "titleBarText": "收藏网站"
            }
    }
  }
}
